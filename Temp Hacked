// ==UserScript==
// @name         Sarathi Parivahan Authentication Page Replacer
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Replaces the Sarathi Parivahan authentication page body with a full-screen iframe
// @author       You
// @match        https://sarathi.parivahan.gov.in/sarathiservice/403.jsp
// @grant        none
// ==/UserScript==

(function() {
    'use strict';

    // Function to replace the body content
    function replaceBody() {
        // Stop any further processing of the original page
        window.stop();

        // Create new body content with full-screen iframe
        document.body.innerHTML = '<iframe src="authenticationaction.do" style="height:100vh; width:100%; border:none; position:fixed; top:0; left:0;"></iframe>';

        // Add some CSS to ensure no margins/padding
        document.head.insertAdjacentHTML('beforeend', '<style>body { margin: 0; padding: 0; overflow: hidden; }</style>');
    }

    // Run the function when the body starts loading
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', replaceBody);
    } else {
        replaceBody();
    }
})();
